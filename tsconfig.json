{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "skipLibCheck": true,

    "isolatedModules": true,
    "moduleDetection": "force",
    "declaration": true,

    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,

    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "outDir": "./dist"
  },
  "include": ["src", "bin"]
}
